{
    "name": "nextjs-tailwindcss",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "env-cmd -f .env/.env.development next dev --turbo",
        "start:dev": "env-cmd -f .env/.env.development next dev",
        "build:dev": "env-cmd -f .env/.env.development next build",
        "start:stag": "env-cmd -f .env/.env.staging next start",
        "build:stag": "env-cmd -f .env/.env.staging next build",
        "start:main": "env-cmd -f .env/.env.production next start",
        "build:main": "env-cmd -f .env/.env.production next build",
        "commit": "npx cz",
        "lint": "eslint ./src --fix && tsc",
        "check-types": "tsc --noEmit --pretty",
        "prepare": "husky install"
    },
    "dependencies": {
        "next": "14.2.3",
        "react": "^18",
        "react-dom": "^18",
        "react-hot-toast": "^2.4.1",
        "sharp": "^0.33.4",
        "tailwind-merge": "^2.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/cz-commitlint": "^19.2.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.8.0",
        "autoprefixer": "^10.4.19",
        "check-types": "^11.2.3",
        "commitizen": "^4.3.0",
        "env-cmd": "^10.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-unused-imports": "^3.1.0",
        "husky": "^9.0.11",
        "postcss": "^8",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "sass": "^1.77.2",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
